<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutSpeciesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/editSpeciesName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/places_ic_search"
                    android:hint="@string/animal"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/default_input_font_size" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/speciesDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/row_cross_round_tick_width"
                    android:layout_height="@dimen/row_cross_round_tick_width"
                    android:src="@drawable/ic_info_outline_black_24dp"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/speciesURL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/smaller_input_font_size" />
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin">

            <EditText
                android:id="@+id/editLatitude"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/sign_latitude"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="@dimen/default_input_font_size" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin">

            <EditText
                android:id="@+id/editLongitude"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/sign_longitude"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="@dimen/default_input_font_size" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:orientation="vertical">

            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_you_see" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/whatSeenSpinner"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingStart="0dp"
                android:textSize="@dimen/default_input_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:orientation="vertical">

            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_recent" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/howRecentSpinner"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingStart="0dp"
                android:textSize="@dimen/default_input_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:orientation="vertical">

            <Button
                android:id="@+id/addPhotoButton"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="@dimen/button_minimum_width"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="@string/add_photo"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input_view_top_margin"
                android:layout_marginTop="@dimen/input_view_top_margin"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>