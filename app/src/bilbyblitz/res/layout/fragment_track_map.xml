<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/InputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_type" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/surveySpinner"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/default_input_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingStart="0dp" />
        </LinearLayout>

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:textSize="@dimen/default_input_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:text="@string/gps_start_message" />

            <Button
                android:id="@+id/startGPSButton"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/button_minimum_width"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="@string/start_gps"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        <FrameLayout
            android:id="@+id/mapLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/input_view_top_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutCentroidLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:minHeight="@dimen/minimum_height_input_views">

            <EditText
                android:id="@+id/editCentroidLatitude"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/default_input_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/centroid_latitude"
                android:inputType="textMultiLine"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutCentroidLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_view_top_margin"
            android:minHeight="@dimen/minimum_height_input_views">

            <EditText
                android:id="@+id/editCentroidLongitude"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/default_input_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/centroid_longitude"
                android:inputType="textMultiLine"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>