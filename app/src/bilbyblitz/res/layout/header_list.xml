<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_page_image_height">

    <!--android:src="@drawable/home_page_header_background"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_page_image_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home_page_header_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/row_bigger_icon_width"
            android:layout_height="@dimen/row_bigger_icon_width"
            android:src="@mipmap/ic_launcher_circular"
            app:civ_border_color="@color/header_icon_border_color"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/name"
            style="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/bigger_input_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/header_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/logoutButton"
            style="@style/TextAppearance.AppCompat.Small"
            android:textSize="@dimen/smaller_input_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:text="@string/logout_title"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>